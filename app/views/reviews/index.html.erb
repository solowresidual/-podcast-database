<div class="review-index-banner">
  <div>
    <div class="review-text-content">
      <h1>My Reviews</h1>
      <h5 class="reviews-paragraph">Keep track of all the episodes you've enjoyed <br>and the feedback you've left for the community</h5>
    </div>
  </div>
</div>
<div class="page-margin"></div>
<div class="review-cards-container">
    <% @reviews.each do |review| %>
      <div class="podcast">
        <div class="review-preview">
          <h5 class="mb-5"><%= review.episode.podcast.name %></h5>
          <%= cl_image_tag review.episode.podcast.photo.key, alt: "alttext", class: "preview-image" %>
        </div>
        <div class="review-info">
          <h5><%= link_to review.episode.name, episode_path(review.episode), class: "ep-name-link" %></h5>
          <p><span><%= sanitize '<i class="fas fa-star stars"></i>' * review.rating if review.rating.present? %></span></p>
          <p><%= review.content %></p>
          <div class="review-buttons">
            <p class="btn-edit-review"><%= link_to 'Edit Review', edit_episode_review_path(review.episode, review) %></p>
            <p class="btn-delete-review"><%= link_to 'Delete Review', review_path(review), method: :delete, data: {confirm: "Are you sure?"}  %></p>
          </div>
        </div>
      </div>
    <% end %>
</div>
</div>
