<! -- Main Home Banner -->

<div class="banner">
  <div class="container">
    <div class="banner-content">
      <div>
        <h1>The World's <br> Podcast <br> Database</h1>
      </div>
      <div class="search-bar-home">
      <%= render 'shared/search_form' %>
        <p></p>
      </div>
    </div>
  </div>
</div>

<! -- Episode Recommendations Title -->

<div class="container grey mt-5">
  <h1>Our Selected Favorites</h1>
  <img src="" alt="">
  <img src="" alt="">
</div>


<! -- Episodes Tiles -->

<div class="container">
  <div class="cards">
    <% @episodes.each do |episode| %>
      <div class="card p-3">
        <div class="card-heading">
          <h4><%= link_to episode.name , episode %></h4>
          <span><%= '⭐️' * episode.average_rating if episode.average_rating.present? %></span>
        </div>
        <div class="card-home-body">
          <p><%= episode.description %></p>
          <p><%= episode.podcast.category %></p>
        </div>
        <img src="" alt="">
        <button>Add to Wishlist</button>
      </div>
    <% end %>
   </div>
</div>

